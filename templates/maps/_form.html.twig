{{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
    <div class="row row-cards mb-3"
         data-controller="maps"
         data-maps-maps-field="canvas-tools"
         data-maps-draw-button="poly"
         data-maps-form-input="map_map"
         data-maps-sector-name-input="sector_name"
         data-maps-color-picker-input="color"
         data-maps-opacity-picker-input="opacity"
         data-maps-bg-image-picker="bg_image"
    >
        <div class="col-10">
            <div class="card">
                <div class="card-body card-body-scrollable card-body-scrollable-shadow p-0" style="max-height: 600px;">
                    <canvas id="canvas-tools" class="card-body" width="1600" height="1200" ></canvas>
                </div>
            </div>
        </div>
        <div class="col-2">
            <div class="row">
                <div class="col-12">
                    <div class="mb-3">
                        <button id="poly" class="btn btn-secondary btn-block">Zeichne Bereich</button>
                    </div>
                    <div class="mb-3 card">
                        <div class="card-body p-2">
                            <label class="form-label" for="sector_name">Bezeichnung</label>
                            <input type="text" class="form-control" id="sector_name" />
                        </div>
                    </div>
                    <div class="mb-3 card">
                        <div class="card-body p-2">
                            <label class="form-label" for="color">Sektorfarbe</label>
                            <input type="color" id="color"/>
                        </div>
                    </div>
                    <div class="mb-3 card">
                        <div class="card-body p-2">
                            <label class="form-label" for="opacity">Sektortransparenz</label>
                            <input type="range" id="opacity" value="0.2" min="0.1" max="1" step="0.1">
                        </div>
                    </div>
                    <div class="mb-3 card">
                        <div class="card-body p-2">
                            <label class="form-label" for="bg_image">Hintergrundbild</label>
                            <input type="file" class="form-control" id="bg_image"/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-10">
            <div class="alert alert-info" role="alert">
                <h4 class="alert-title">Ladezeit bei Speicherung</h4>
                <div class="text-muted">
                    Bitte beachten Sie, dass das Speichern des Formulares einige Zeit in Anspruch nehmen kann.
                    Dies hängt primär von der Dateigröße des gewählten Hintergrundbildes ab. Bei der Zeichnung
                    von vielen Bereichen kann es von Vorteil sein in der Zwischenzeit zu speichern um die
                    Arbeit zu sichern.
                </div>
            </div>
        </div>
    </div>
    <div class="row row-cards">
        <div class="col-10">
            <div class="card">
                <div class="card-body">
                    {{ form_widget(form) }}
                </div>
                <div class="card-footer text-end">
                    <div class="d-flex">
                        <a href="{{ path('maps_index') }}" class="btn btn-link">Abbrechen</a>
                        <button type="submit" data-check-form="map" class="btn btn-primary ms-auto">Speichern</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
