{% extends 'base.html.twig' %}

{% block content %}

    <div class="row">
        <div class="col-12">
            <h3>Konfiguration für Übersichtskarten</h3>
        </div>
    </div>

    <div class="row" data-controller="maps" data-maps-maps-field="canvas-tools">
        <div class="col-12">
            <button id="poly" title="Draw Polygon">Draw Polygon</button>
            <button id="serialize" title="Serialisiere">Serialisiere</button>

            <pre id="content"></pre>
            <canvas id="canvas-tools" class="canvas" width="1000" height="1000" style="border: 1px solid black;"></canvas>
            <span id="canvas-tooltip" class="toolTip" style="
  position: absolute;
  z-index: 1;
  background: rgb(119, 128, 0);
  height: 30px;
  width: 120px;
  padding: 8px;
  font-size: 13px;
  color: #fff;
  visibility: hidden;
">ToolTip</span>

        </div>
    </div>

{% endblock %}
